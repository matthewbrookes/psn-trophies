<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <EditTextPreference
            android:title="@string/pref_title_email"
            android:key="email" />

    <EditTextPreference
            android:title="@string/pref_title_password"
            android:key="password"
            android:inputType="textPassword"
            android:password="true" />

    <CheckBoxPreference
            android:defaultValue="true"
            android:key="download_images"
            android:title="@string/pref_title_download_images" />

    <CheckBoxPreference
            android:defaultValue="true"
            android:key="save_images"
            android:title="@string/pref_title_save_images" />

    <Preference
            android:title="@string/pref_title_delete_images"
            android:key="delete_button"
            android:summary="@string/pref_summary_delete_images"/>

    <ListPreference
            android:defaultValue="-1"
            android:entries="@array/pref_delete_frequency_titles"
            android:entryValues="@array/pref_delete_frequency_values"
            android:key="delete_frequency"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_delete_frequency" />
</PreferenceScreen>