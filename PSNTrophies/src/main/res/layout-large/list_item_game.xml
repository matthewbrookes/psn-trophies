<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:paddingLeft="10dip"
    android:background="@drawable/largeborder">

    <ImageView
        android:id="@+id/gameImage"
        android:layout_width="320px"
        android:layout_height="176px" 
        android:paddingRight="10dip"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gameImage"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />
    
    <TextView
        android:id="@+id/trophiesAchievableLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameName"
        android:layout_toRightOf="@id/gameImage"
        android:text="Total trophies:  "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />
		
	<TextView
	    android:id="@+id/gameTrophiesAchievable"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/trophiesAchievableLabel"
	    android:layout_toRightOf="@id/trophiesAchievableLabel"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="#FFFFFF" />
        
	<LinearLayout
	    android:id="@+id/trophiesEarnedLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/trophiesAchievableLabel"
	    android:layout_toRightOf="@id/gameImage" >

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Trophies earned: "
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="#FFFFFF" />

	    <TextView
	        android:id="@+id/platinumLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/platinum" />

	    <TextView
	        android:id="@+id/goldLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF" />

	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/gold" />

	    <TextView
	        android:id="@+id/silverLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF" />

	    <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/silver" />

	    <TextView
	        android:id="@+id/bronzeLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFF" />

	    <ImageView
	        android:id="@+id/imageView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/bronze" />
	</LinearLayout>

	<ImageView
	    android:id="@+id/platformImage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/gameImage"
	    android:layout_below="@id/trophiesEarnedLayout" />

</RelativeLayout>