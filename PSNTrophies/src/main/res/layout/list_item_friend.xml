<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/border"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:paddingLeft="10dip">

    <ImageView
        android:id="@+id/friendImage"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentLeft="true"
        android:paddingRight="10dp"
        android:layout_centerInParent="true"
        android:src="@drawable/defaultavatar"/>

    <TextView
        android:id="@+id/friendName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/friendImage"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />




    <TextView
        android:id="@+id/trophyLevelLabel"
        android:layout_below="@id/friendName"
        android:layout_toRightOf="@id/friendImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trophy Level:  "
        android:textColor="#FFFFFF" />

	<TextView
        android:id="@+id/trophyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/trophyLevelLabel"
        android:layout_alignTop="@id/trophyLevelLabel"
        android:textColor="#FFFFFF" />

        
	<LinearLayout
	    android:id="@+id/trophiesEarnedLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/trophyLevel"
	    android:layout_toRightOf="@id/friendImage" >
					<TextView
					    android:text="Earned: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:id="@+id/platinumLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/platinum" />

                    <TextView
                        android:id="@+id/goldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/gold" />

                    <TextView
                        android:id="@+id/silverLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/silver" />

                    <TextView
                        android:id="@+id/bronzeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bronze" />
                </LinearLayout>
    <TextView
            android:id="@+id/presence"
            android:layout_below="@id/trophiesEarnedLayout"
            android:layout_toRightOf="@id/friendImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />
    <TextView
            android:id="@+id/game"
            android:layout_below="@id/presence"
            android:layout_toRightOf="@id/friendImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />
</RelativeLayout>