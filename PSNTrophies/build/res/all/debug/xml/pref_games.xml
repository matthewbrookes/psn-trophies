<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="all"
        android:entries="@array/pref_filter_games_titles"
        android:entryValues="@array/pref_filter_games_values"
        android:key="filter_games"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_filter_games" />
    
    <ListPreference
        android:defaultValue="recent"
        android:entries="@array/pref_sort_games_titles"
        android:entryValues="@array/pref_sort_games_values"
        android:key="sort_games"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sort_games" />


